[Unit]
Description=Go High Level Daily Retry Service
After=network.target mysql.service

[Service]
Type=oneshot
User=www-data
Group=www-data
WorkingDirectory=/opt/wordpress-leads-extractor
Environment="PATH=/opt/wordpress-leads-extractor/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/opt/wordpress-leads-extractor/venv/bin/python /opt/wordpress-leads-extractor/sync_to_ghl.py --retry-failed
StandardOutput=append:/var/log/ghl-sync/retry.log
StandardError=append:/var/log/ghl-sync/retry-error.log